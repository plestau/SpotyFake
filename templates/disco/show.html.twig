{% extends 'base.html.twig' %}

{% block title %}Disco{% endblock %}

{% block body %}
{% if app.user %}
    <h1>Disco</h1>

    <table class="tableDisco">
        <tbody>
            <tr>
                <th>Titulo</th>
                <td>{{ disco.titulo }}</td>
            </tr>
            <tr>
                <th>Fecha_lanzamiento</th>
                <td>{{ disco.fechaLanzamiento ? disco.fechaLanzamiento|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Canciones</th>
                {% for cancion in disco.cancion %}
                    <td><a href="{{ path('app_cancion_show', {'id': cancion.id}) }}">{{ cancion.titulo }}</a></td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_disco_index') }}">back to list</a>

    <a href="{{ path('app_disco_edit', {'id': disco.id}) }}">edit</a>

    {{ include('disco/_delete_form.html.twig') }}
{% else %}
